<?xml version="1.0" encoding="UTF-8"?>
<ehcache name="es">

<!--     <diskStore path="java.io.tmpdir"/> -->
<diskStore path="../temp/prosys/ehcache" />


<!-- maxEntriesLocalHeap:堆内存中最大缓存对象数，0没有限制 -->
<!-- maxEntriesLocalDisk:磁盘中的最大对象数，默认为0不限制 -->
<!-- eternal:elements是否永久有效，如果为true，timeouts将被忽略，element将永不过期 -->
<!-- timeToIdleSeconds:失效前的空闲秒数，当eternal为false时，这个属性才有效，0为不限制 -->

<!-- maxBytesLocalHeap:如果设置了这个属性，maxEntriesLocalHeap将不能被利用 -->
<!-- timeToLiveSeconds:失效前的存活秒数，创建时间到失效时间的间隔为存活时间，当eternal为false时，这个属性才有效，0为不限制 -->
<!-- diskSpoolBufferSizeMB:这个参数设置DiskStore（磁盘缓存）的缓存区大小。默认是30MB。每个Cache都应该有自己的一个缓冲区。 -->
<!-- clearOnFlush:当调用flush()是否清除缓存，默认是 -->

<!-- tTI timeToIdleSeconds  用于设置对象在cache中的最大闲置时间，就是 在一直不访问这个对象的前提下，这个对象可以在cache中的存活时间。 -->
<!-- tTL timeToLiveSeconds  用于设置对象在cache中的最大存活时间，就是 无论对象访问或是不访问(闲置),这个对象在cache中的存活时间。 -->
<!-- min(tTI,tTL); -->

    <!-- 登录记录缓存 验证码或锁定1天 -->
    <cache name="longinLogCache"
           maxEntriesLocalHeap="2000"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           overflowToDisk="false"
           statistics="true">
    </cache>

    <cache name="authorizationCache"
           maxEntriesLocalHeap="2000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>

    <cache name="authenticationCache"
           maxEntriesLocalHeap="2000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>

    <cache name="shiro-activeSessionCache"
           maxEntriesLocalHeap="2000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>
    
    <!-- 菜单cache -->
    <cache name="sys_memu"
           maxEntriesLocalHeap="3000"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           overflowToDisk="false"
           statistics="true">
    </cache>
    
      <!-- 用户cache -->
    <cache name="sys_user_bean"
           maxEntriesLocalHeap="5000"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           overflowToDisk="false"
           statistics="true">
    </cache>

  <cache name="selectCount"
           maxEntriesLocalHeap="5000"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="600"
           overflowToDisk="false"
           statistics="true">
    </cache>


</ehcache>
